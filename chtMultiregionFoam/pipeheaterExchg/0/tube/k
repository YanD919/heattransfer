FoamFile
{
    version     2.0;
    format      ascii;
    arch        "LSB;label=32;scalar=64";
    class       volScalarField;
    location    "0/tube";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 2 -2 0 0 0 0 ];

internalField   uniform 0.1;

boundaryField
{
    tubeend1
    {
        type            inletOutlet;
        value           $internalField;
        inletValue      $internalField;
    }
    tubeend2
    {
        type            turbulentIntensityKineticEnergyInlet;
        value           $internalField;
        intensity       0.05;
    }
    tube_to_copper
    {
        type            kqRWallFunction;
        value           uniform 0.1;
    }
}


// ************************************************************************* //
